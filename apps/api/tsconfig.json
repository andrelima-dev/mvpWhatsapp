{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
  "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "moduleResolution": "node",
    "paths": {
      "@app/*": ["src/*"],
      "@mvp/types": ["../../packages/types/dist"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
